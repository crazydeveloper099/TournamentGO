<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.go.gamez_era">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission-sdk-23 android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <application
        android:name=".myApp"
        android:allowBackup="true"
        android:icon="@drawable/joy_icon2"
        android:label="@string/app_name"

        android:roundIcon="@drawable/joy_icon2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"

        tools:replace="android:icon">



        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/pdlg_color_white" />
        <activity android:name=".game_showcase"
            android:theme="@style/AppTheme3"></activity>
        <activity
            android:name=".privacy_policy"
            android:theme="@style/AppTheme3" />
        <activity
            android:name=".results"
            android:theme="@style/results" />
        <activity
            android:name=".terms_and_conditions"
            android:theme="@style/AppTheme3" />
        <activity
            android:name=".transcations"
            android:theme="@style/transcations" />
        <activity
            android:name=".Statics_settings"
            android:theme="@style/AppTheme3" />
        <activity
            android:name=".Contact_us_activity"
            android:theme="@style/contact_us" />
        <activity
            android:name=".edit_profile"
            android:theme="@style/Edit_profile"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".settings"
            android:theme="@style/Setting_activity" />
        <activity
            android:name=".redeem_activiy"
            android:theme="@style/wallet"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".rules_activity"
            android:theme="@style/AppTheme4" />
        <activity
            android:name=".splash_screen"
            android:theme="@style/Login_theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login_activity"
            android:theme="@style/Login_theme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:hardwareAccelerated="true"
            android:theme="@style/AppTheme3" />
        <activity
            android:name=".forget_pass"
            android:theme="@style/AppTheme5"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".Wallet_page"
            android:theme="@style/wallet"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".Instructions_activity"
            android:theme="@style/instructions_activity" />


    </application>

</manifest>