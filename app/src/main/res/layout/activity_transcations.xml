<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transcations"
    android:orientation="vertical"
    android:background="@drawable/grad_back_wallets">
    <RelativeLayout
        android:id="@+id/NonetScreen_transcations123"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:theme="@style/NoInterNet_theme"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/flying_man"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="50dp"
            android:fontFamily="monospace"

            android:gravity="center|center_vertical"
            android:maxLines="4"
            android:padding="8dp"
            android:text="What we've got here is..failure to communicate.\n\nNo Network Connection."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/connected_transcations123"

       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/no_transactions"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:gravity="center"
                android:background="#FFFFFF"

                >

                <ImageView
                    android:id="@+id/image_no_transcations"
                    android:layout_width="match_parent"

                    android:layout_height="200dp"
                    app:srcCompat="@drawable/no_transcations_image_2"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Sorry, no transactions found"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/image_no_transcations"/>
                <com.romainpiel.shimmer.ShimmerButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:id="@+id/make_a_transcation"
                    android:text="MAKE A TRANSCATION"
                    app:reflectionColor="#696969"
                    android:background="@drawable/button_paytm"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:textSize="12sp"
                    android:paddingRight="20dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                app:srcCompat="@drawable/arrow_2_transcations"
                android:id="@+id/back_button_transcations_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Transactions"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@id/back_button_transcations_2"

                android:textSize="20sp"
                android:textColor="#000"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/transactions_are_there"
            android:visibility="gone"
            >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_redeem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/grad_back_wallets"
        app:subtitle="wallet"
        android:layout_marginTop="25dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imageView_wallet"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/wallet"
                android:layout_marginTop="60dp"/>

            <TextView
                android:id="@+id/textView_rs_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/imageView_wallet"
                android:text="â‚¹"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/textView_rs_symbol"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/arrow_settings"
        android:id="@+id/back_button_transcations"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="27dp"
                android:layout_toRightOf="@id/back_button_transcations"
                android:textSize="20sp"
                android:textColor="#FFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar_redeem"


        android:background="#e2e2e2">
    <TextView
        android:id="@+id/heading_transcations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"

        android:text="Transcations"
        android:textSize="23sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView_transcations"
        android:layout_marginTop="10dp"
        >

    </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


</RelativeLayout>
</RelativeLayout>
</RelativeLayout>