<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game_showcase"
    android:background="@drawable/grad_back_showcase">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/NonetScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:theme="@style/NoInterNet_theme"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/flying_man"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="50dp"
            android:fontFamily="monospace"

            android:gravity="center|center_vertical"
            android:maxLines="4"
            android:padding="8dp"
            android:text="What we've got here is..failure to communicate.\n\nNo Network Connection."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/connected_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        android:orientation="vertical"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="0dp"

            >


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mylol"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:gravity="center"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:elevation="0dp"
                app:layout_scrollFlags="scroll|enterAlways">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">


                        <Button
                            android:id="@+id/textView23"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/main_activity_wallet_button"
                            android:elevation="0dp"
                            android:text="0"

                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tournament"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />


                <TextView
                    android:id="@+id/go_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="go"
                    android:textColor="#e59400"
                    android:textSize="20sp"

                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/liv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="end"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/game_show_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/liv"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Battle Royale"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_show_case"
            android:layout_marginTop="10dp"
            android:id="@+id/hotz_scrollbar">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >
        <io.armcha.elasticview.ElasticView
            android:id="@+id/imageElasticView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            app:cardCornerRadius="10dp"
            android:padding="10dp"

            app:cardElevation="5dp"
            app:flexibility="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/pic_pickup_pubg"

                    android:contentDescription="TODO" />

                <TextView
                android:id="@+id/game_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="PUBG Mobile"
                android:textColor="#996300

"
                android:textSize="15sp"
                     />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="Active players:"
                    android:textColor="#000"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="15115"

                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    />
                </LinearLayout>
            </LinearLayout>
        </io.armcha.elasticview.ElasticView>

    <io.armcha.elasticview.ElasticView
        android:id="@+id/imageElasticView_2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:flexibility="4"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_card_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="TODO"

                app:srcCompat="@drawable/fort_2" />

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/game_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="FORTNITE Mobile"
                android:textColor="#7647a2"
                android:textSize="15sp"
                app:reflectionColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.romainpiel.shimmer.ShimmerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/coming_soon"
                    android:text="Coming soon"
                    android:textColor="#000"
                    app:reflectionColor="#dddddd"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>
    </io.armcha.elasticview.ElasticView>

</LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotz_scrollbar"
            android:layout_marginLeft="5dp"
            android:id="@+id/strategy_heading"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:text="Strategy"
            android:gravity="center"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:id="@+id/hotz_scrollbar_2"
            android:layout_below="@id/strategy_heading"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <io.armcha.elasticview.ElasticView
                    android:id="@+id/imageElasticView_3"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    android:padding="10dp"
                    app:cardElevation="5dp"
                    app:flexibility="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_card_view_3"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/coc"

                            android:contentDescription="TODO" />

                        <com.romainpiel.shimmer.ShimmerTextView
                            android:id="@+id/game_title_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:gravity="center"
                            android:text="Clash of Clans"
                            android:textColor="#FF0000

"
                            android:textSize="15sp"
                            app:reflectionColor="#191900" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"
                            android:gravity="center">

                            <com.romainpiel.shimmer.ShimmerTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:id="@+id/coming_soon_2"
                                android:text="Coming soon"
                                android:textColor="#000"
                                app:reflectionColor="#dddddd"
                                android:layout_marginRight="10dp"
                                android:textSize="12sp" />


                        </LinearLayout>
                    </LinearLayout>
                </io.armcha.elasticview.ElasticView>



            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>